# Example environment variables for local development and deployment
# Copy this to a file named `.env` and edit values before running

# App configuration
ENVIRONMENT=development
DEBUG=true

# Database (set this to your MongoDB URI)
# For local MongoDB: mongodb://localhost:27017/esg_dashboard
# For Mongo Atlas: mongodb+srv://<user>:<password>@cluster0.mongodb.net/esg_dashboard?retryWrites=true&w=majority
MONGODB_URL=mongodb://localhost:27017/esg_dashboard
MONGODB_DB=esg_dashboard

# Auth / JWT
SECRET_KEY=change-me
ACCESS_TOKEN_EXPIRE_MINUTES=1440
ALGORITHM=HS256

# Frontend / CORS
FRONTEND_URL=https://esgfrontend-delta.vercel.app
# CORS_ORIGINS can be a JSON list or comma-separated list
CORS_ORIGINS=["https://esgfrontend-delta.vercel.app"]

# Gemini AI (optional)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash

# SMTP (optional - used to send emails)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=admin@example.com
EMAIL_FROM_NAME=AfricaESG.AI

# Uploads / local email dumps
UPLOAD_DIR=uploads

# Note: After editing `.env`, restart the server so the changes are picked up.
